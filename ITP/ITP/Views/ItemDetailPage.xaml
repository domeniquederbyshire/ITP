<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITP.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="10" Padding="30">
        <Frame BackgroundColor="#DEE8DC" Padding="24">
            <StackLayout>
                <Label Text="Enter event name:" FontSize="Medium" TextColor="Black"/>
                <Label Text="{Binding EventName}" FontSize="Small" TextColor="Black"/>
                <Label Text="Enter event date:" FontSize="Medium" TextColor="Black"/>
                <Label Text="{Binding EventDate}" FontSize="Small" TextColor="Black"/>
            </StackLayout>
        </Frame>
        <Label Text="Amount required:" FontSize="Medium" TextColor="Black"/>
        <Label Text="{Binding EventValue}" FontSize="Small" TextColor="Black"/>
    </StackLayout>

</ContentPage>