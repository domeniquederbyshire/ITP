        <StackLayout Padding="0, 2">
            <Frame BackgroundColor="#DEE8DC" Padding="30,10,30,10" CornerRadius="30">
                <StackLayout>
                    <Label Text="Account Type" HorizontalTextAlignment="Left" TextColor="Black" FontSize="20"/>
                    <Label Text="£XXX" HorizontalTextAlignment="Left" TextColor="Black" FontSize="30"/>
                    <Label Text="Available" HorizontalTextAlignment="Left" TextColor="Black" FontSize="15"/>
                    <Label Text="SORT CODE                    ACCOUNT NUMBER" HorizontalTextAlignment="Left" TextColor="Black" FontSize="15"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </StackLayout>

</ContentPage>
